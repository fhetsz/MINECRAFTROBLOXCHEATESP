local TARGET_ID_1 = "82164848622194"
local TARGET_ID_2 = "http://www.roblox.com/Thumbs/Asset.ashx?width=512&height=512&assetId=88662911730235"
local TARGET_ID_2_1 = "88662911730235"
local function checkDecal(decal)
    if decal:IsA("Decal") then
        local texture = tostring(decal.Texture)

        if texture:match(TARGET_ID_1) then
            local p = decal.Parent
            if p and p:IsA("BasePart") then
                if not p:FindFirstChild("DecalHighlight") then
                    local h = Instance.new("Highlight")
                    h.Name = "DecalHighlight"
                    h.FillTransparency = 0.1
                    h.OutlineTransparency = 0.5
                    h.FillColor = Color3.new(1, 0, 0)
                    h.Parent = p
                end
            end
        end

        if texture:match(TARGET_ID_2) or texture:match(TARGET_ID_2_1) then
            local p = decal.Parent
            if p and p:IsA("BasePart") then
                if not p:FindFirstChild("DecalHighlight") then
                    local h = Instance.new("Highlight")
                    h.Name = "DecalHighlight"
                    h.FillTransparency = 0.1
                    h.OutlineTransparency = 0.5
                    h.FillColor = Color3.new(0, 0, 1)
                    h.Parent = p
                end
            end
        end
    end
end

for _, obj in ipairs(workspace:GetDescendants()) do
    checkDecal(obj)
end

workspace.DescendantAdded:Connect(function(obj)
    checkDecal(obj)
end)

game:GetService("UserInputService").InputBegan:Connect(function(k)
    if k.KeyCode == Enum.KeyCode.P then
        for _, v in ipairs(workspace:GetDescendants()) do
            if v.Name == "DecalHighlight" then
                v:Destroy()
            end
        end
    end
end)
